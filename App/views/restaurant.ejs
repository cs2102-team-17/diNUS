<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

   <title> <%= data.rname %> </title>

   <!-- Bootstrap core CSS -->
   <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

   <!-- Custom styles for this template -->
   <link href="css/small-business.css" rel="stylesheet">

</head>

<body>

  <!-- Navigation -->
    <% include partials/header.ejs %>

  <!-- Page Content -->
  <div class="container">

    <!-- Heading Row -->
    <div class="row align-items-center my-5">
      <div class="col-lg-5">
      <br>
        <h1 class="font-weight-light"><%=data.rname %></h1>
        <p><%= data.rdesc %></p>
           <a class="btn btn-success bg-success" href="reservation?rid=<%= data.rid %>">Reserve a table!</a>
           <br>
       </div>
      <!-- /.col-md-4 -->
    <!-- /.row -->

    <!-- Call to Action Well -->
    <div class="card text-white bg-info my-5 py-4 text-center">
      <div class="card-body">
        <p class="text-white m-0">Check out our menu below!</p>
      </div>
    </div>

    <!-- Content Row -->
    <div class="row">
      <div class="col-md-4 mb-5">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title">Menu One</h2>
            <p class="card-text"> Menu Description </p>
          </div>
          <div class="card-footer">
            <a href="#" class="btn btn-primary btn-sm">More Info</a>
          </div>
        </div>
      </div>
      <!-- /.col-md-4 -->
      <div class="col-md-4 mb-5">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title">Menu Two</h2>
            <p class="card-text"> Menu Description </p>
          </div>
          <div class="card-footer">
            <a href="#" class="btn btn-primary btn-sm">More Info</a>
          </div>
        </div>
      </div>
      <!-- /.col-md-4 -->
      <div class="col-md-4 mb-5">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title">Menu Three</h2>
            <p class="card-text"> Menu Description </p>
          </div>
          <div class="card-footer">
            <a href="#" class="btn btn-primary btn-sm">More Info</a>
          </div>
        </div>
      </div>
      <!-- /.col-md-4 -->

    </div>
    <table class="table">
        <thead>
            <tr>
                <% for(var i in avgFields) { %>
                    <th><%= avgFields[i].name%></th>
                <% }%>
            </tr>
        </thead>
        <tbody>
            <% for(var i in avgData) { %>
                <tr>
                    <% for(var j in avgFields) { %>
                        <td><%= avgData[i][avgFields[j].name]%></td>
                    <% }%>
                </tr>
            <% }%>
        </tbody>
    </table>
    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>